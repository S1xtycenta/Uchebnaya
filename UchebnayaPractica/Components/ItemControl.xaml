<UserControl x:Class="UchebnayaPractica.Components.ItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UchebnayaPractica.Components"
             mc:Ignorable="d" 
             d:DesignHeight="180" d:DesignWidth="180" MaxHeight="180" MaxWidth="180">
    <Grid>
        <StackPanel Margin="10">
            <Image x:Name="MainImage" MaxHeight="140" Height="140" Source="{Binding Photo}" MouseMove="MainImage_MouseMove"></Image>
            <TextBlock FontWeight="Bold" Text="{Binding Name}"></TextBlock>
        </StackPanel>   
    </Grid>
</UserControl>
