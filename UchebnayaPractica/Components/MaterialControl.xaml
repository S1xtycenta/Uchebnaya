<UserControl x:Class="UchebnayaPractica.Components.MaterialControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UchebnayaPractica.Components"
             mc:Ignorable="d" 
             d:DesignHeight="40" Height="40" MinHeight="40" MaxWidth="975" Width="975" MinWidth="370">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Button Click="Trash_Click" x:Name="Trash" Style="{StaticResource StilyzedButton}" Width="60" Height="25" Margin="10 0 15 0">Delete</Button>
            <ComboBox x:Name="MaterialCb" DisplayMemberPath="Name" SelectedItem="{Binding Material}" Height="25" Width="200" Margin="0 0 10 0" SelectionChanged="MaterialCb_SelectionChanged"></ComboBox>
            <TextBox x:Name="CountTb" Height="25" Width="80" Text="{Binding Count, StringFormat={}{0:F0}}" PreviewTextInput="CountTb_PreviewTextInput" TextChanged="CountTb_TextChanged"></TextBox>
            <TextBlock Margin="5 0 0 0" VerticalAlignment="Center">шт.</TextBlock>
        </StackPanel> 
    </Grid>
</UserControl>
