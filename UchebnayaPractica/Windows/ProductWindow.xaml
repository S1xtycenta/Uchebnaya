<Window x:Class="UchebnayaPractica.Windows.ProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:UchebnayaPractica.Windows"
        mc:Ignorable="d"
        Icon="\Images\Logo_Color_Transparent.ico" Height="600" Width="1000" MinWidth="1000" MinHeight="600" Closing="Window_Closing" >
    <Grid>
        <TextBlock  FontWeight="Bold" FontSize="18" Margin="10 5 0 0">Изделия заказа</TextBlock>
        <ScrollViewer HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Auto" Margin="10 35 10 10">
            <WrapPanel x:Name="MyPanel"></WrapPanel>
        </ScrollViewer>
        <Button x:Name="SaveBtn" Click="SaveBtn_Click" Style="{StaticResource StilyzedButton}" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="5" Width="200">Сохранить</Button>
    </Grid>
</Window>
